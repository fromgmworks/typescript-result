{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    // Enforce using explicit file extensions
    // Support for ".mjs" files need this.
    "moduleResolution": "NodeNext",
    "module": "CommonJS",
    "noEmitHelpers": false,
    "skipLibCheck": true,
    "lib": ["es2015"],
    "strict": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    // NOTE: Don't change this from es5 - we use this to allow callable classes.
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./dist"]
}
